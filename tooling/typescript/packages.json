{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "NestJS",
  "extends": "./nestjs.json",
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*spec.ts"
  ],
  "compilerOptions": {
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true
  }
}