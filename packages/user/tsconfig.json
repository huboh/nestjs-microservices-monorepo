{
  "extends": "@tooling/typescript/packages.json",
  "exclude": [
    "node_modules",
    "prisma/generated",
    "dist",
    "test",
    "**/*spec.ts"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@package/*": [
        "src/*"
      ],
      "@prisma/user-service/client": [
        "./prisma/generated/client"
      ]
    }
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}